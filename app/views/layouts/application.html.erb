<!DOCTYPE html>
<html>
  <head>
    <title>RailsBlog</title>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon2.png' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Kite+One'%>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
   <div id="sidebar">
     <div id="icon">
       <%= link_to root_path do %>
        <%= image_tag "icon2.png" %>
       <% end %>
     </div>
    <ul>
     	<li class="category">Website</li>
     	<li><%= link_to "Home", root_path %></li>
     	<li><%= link_to "About", about_path %></li>
      <li><%= link_to "Sign In", login_path %></li>
    </ul>

     <ul>
       <li class="category">Social</li>
       <li><a target="_blank" href="http://linkedin.com">LinkedIn</a></li>
       <li><a target="_blank" href="http://github.com">Github</a></li>
       <li><a target="_blank" href="http://facebook.com">Facebook</a></li>
     </ul>
   </div>

   <div id="main_content">
		<div id="header">
			<% if current_page?(root_path) %>
				<p>All Posts</p>
			<% elsif current_page?(about_path) %>
				<p>About</p>
			<% else %>
				<%= link_to "Back to All Posts", root_path %>
			<% end %>

			<% if @current_user %>
				<div class="buttons">
					<button class="button"><%= link_to "New Post", new_post_path %></button>
          <button class="button"><%= link_to "My Account", @current_user %></button>
					<button class="button"><%= link_to "Logout", logout_path %></button>
				</div>
			<% end %>
		</div>

		<% flash.each do |name, msg| %>
			<%= content_tag(:div, msg, class: "alert") %>
		<% end %>
	</div>
<%= yield %>
</body>
</html>
