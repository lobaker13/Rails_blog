<div id="main_content">
<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>User</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= comment.user.full_name %></td>
        <td><%= comment.post.body %></td>
        <td><%= comment.created_at.strftime("%B %d at %r")%></td>
        <td><%= link_to 'Show', comment %></td>
        <% if @current_user && @current_user.id == comment.user_id %>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'There is no going back from this. Definitely, postitively, 100% sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path %>
</div>
