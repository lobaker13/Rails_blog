<div id="main_content">
  <p id="notice"><%= notice %></p>

  <p>
    <h1 class="title">Title:</h1>
    <%= @post.title %>
  </p>

  <p class="body">
    <%= @post.body %>
  </p>

  <p>
    <strong>User:</strong>
    <%= @post.user.full_name %>
  </p>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</div>
